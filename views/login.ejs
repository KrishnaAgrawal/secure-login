<% title = "Login" %>


<div class="glass-card p-8 shadow-xl mx-auto max-w-md">
  <h2 class="text-2xl font-bold mb-4">Sign in</h2>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="bg-red-600 text-white p-3 rounded mb-3"><%= error %></div>
  <% } %>

  <form action="/auth/login" method="post" class="space-y-4">
    <div>
      <label class="label">Email</label>
      <input name="email" type="email" required class="input" placeholder="you@example.com" />
    </div>

    <div>
      <label class="label">Password</label>
      <input name="password" type="password" required class="input" placeholder="Your password" />
    </div>

    <div class="flex items-center justify-between">
      <button class="btn-primary" type="submit">Sign in</button>
      <a class="text-sm text-slate-300 hover:underline" href="/auth/register">Create account</a>
    </div>
  </form>
</div>